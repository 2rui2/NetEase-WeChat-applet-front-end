.sbox{
  background-image:linear-gradient(to left ,#cc4a4a, #7c7c7c);
  width: 100%;
  height:100rpx;
  border-radius:80rpx;
  overflow: hidden;
  margin-top:10rpx;
}
.sbox .txt{
  width: 60%;
  height: 100rpx;
  float: left;
  padding-left:4%;
  color: white;
}
.sbox .search{
  width: 20%;
  height: 100rpx;
  float: left;
  border-right:2rpx solid rgb(102, 80, 80);
}
.sbox .can{
  width:15%;
  height: 100rpx;
  float: right;
}
.search image{
  width:60%;
  height:80%;
  position: relative;
  left:20%;
  top:10%;
}
.can image{
  width:40%;
  height: 50%;
  position: relative;
  left:20%;
  top:25%;
}
.musicbox .item{
  display: flex;
  padding:10rpx 0rpx ;
  justify-content:space-evenly;
  border-bottom: 1rpx solid #ccc;
  margin:0 28rpx;
}
.item .txtbox{
  display:flex;
  flex-direction: column;
  flex: 1;
}
.txtbox .mname{
  font-size:35rpx;
  font-weight: bold;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  width: 600rpx;
}
.txtbox .name{
  font-size: 28rpx; 
  text-overflow: ellipsis;
  overflow: hidden;
  width:600rpx;
  white-space: nowrap;
}
.name text{
  margin-right: 35rpx;
}
.musicbox .picimg{
  height: 100%;
  width:100rpx;
  display: flex;
}
.picimg image{
  height: 80rpx;
  width:80rpx;
  margin: auto;
}