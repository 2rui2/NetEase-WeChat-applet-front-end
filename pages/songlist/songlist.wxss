page{
  padding:10rpx;
  box-sizing: border-box;
}
::-webkit-scrollbar{
display: none;
}
swiper{
  width: 100%;
  height: 300rpx;
  background-color: rgb(209, 209, 196);
}
swiper swiper-item{
  width: 100%;
}
swiper-item image{
  display: block;
  width: 100%;
  height: 100%;
}
.title{
  font-size: 30rpx;
  font-weight: bold;
  line-height:40rpx;
  color: #333;
  border-left: 8rpx solid orangered ;
  padding-left:30rpx;
}
.hotlist{
  height: 300rpx;
  display:flex;
  overflow:auto;
  align-items: center;
}
.hotlist .item{
  text-align: center;
  width: 200rpx;
  margin-right:20rpx;
}
.hotlist .item image{
height: 190rpx;
width:200rpx;
border-radius: 10rpx;
}
.hotlist .item text{
  font-size:28rpx;
  color: rgb(82, 79, 79);
}

.musicbox .item{
  display: flex;
  padding:10rpx 0rpx ;
  justify-content:space-between;
  border-bottom: 1rpx solid #ccc;
  margin: 0 28rpx;
}
.item .txtbox{
  display:flex;
  flex-direction: column;
  flex: 1;
}
.txtbox .mname{
  font-size:35rpx;
  font-weight: bold;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  width: 600rpx;
}
.txtbox .name{
  font-size: 28rpx; 
}
.name text{
  margin-right: 35rpx;
}
.musicbox .picimg{
  height: 100%;
  width:100rpx;
  display: flex;
}
.picimg image{
  height: 80rpx;
  width:80rpx;
  margin: auto;
}