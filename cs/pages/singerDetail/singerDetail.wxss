.imgbox{
  position: relative;
  width:100%;
  height:600rpx;
  overflow: hidden;
}
.imgbox image{
  display: block;
  position: absolute;
  width: 100%;
}
.imgbox .txtsbox{
  position: absolute;
  bottom: 10%;
  left: 40rpx;
}
.txtsbox .name{
  font-size: 50rpx;
  color: #fff;
  font-weight: bold;
}
.txtsbox .txt{
  font-size: 30rpx;
  color: rgb(230, 223, 223);
}
.title{
  font-size: 35rpx;
  font-weight: bold;
  line-height:80rpx;
  color: rgb(36, 35, 35);
 text-indent: 30rpx;
}
.content{
  font-size: 28rpx;
  padding: 0 30rpx;
}
.musicbox .item{
  display: flex;
  padding:10rpx 0rpx ;
  justify-content:space-between;
  border-bottom: 1rpx solid #ccc;
  margin: 0 28rpx;
}
.item .txtbox{
  display:flex;
  flex-direction: column;
  flex: 1;
}
.txtbox .mname{
  font-size:35rpx;
  font-weight: bold;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  width: 600rpx;
}
.txtbox .name{
  font-size: 28rpx; 
  margin-right: 35rpx;
  color: black;
}
.musicbox .picimg{
  height: 100%;
  width:100rpx;
  display: flex;
}
.picimg image{
  height: 80rpx;
  width:80rpx;
  margin: auto;
}