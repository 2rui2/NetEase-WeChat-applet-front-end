  align-items:center;
  justify-content:center;
}
.timebox view{
  color: #fff;
  font-size: 25rpx;
  /* background-color: saddlebrown; */
  width: 80rpx;
}
.timebox slider{
  /* background-color: silver; */
  width: 450rpx;
}
.footer{
  height: 150rpx;
  display: flex;
justify-content:space-around;
  align-items: flex-start;
  /* background-color: skyblue; */
}
.footer image{
  height: 100rpx;
