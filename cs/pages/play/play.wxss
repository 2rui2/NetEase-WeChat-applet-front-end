page{
  height: 100%;
  background-color: black;
  display: flex;
  flex-direction: column;
}
.bg{
  height: 100%;
  width: 180%;
  position: fixed;
  left: 50%;
  transform: translateX(-50%);
  opacity: 0.4;
  z-index: -1;
}
.musicName{
  /* background-color: burlywood; */
  font-size: 50rpx;
  line-height:150rpx;
  text-align: center;
  color: #fff;
}
swiper{
/* background-color: pink; */
flex:1;
}
.imgbox{
  display: flex;
}
swiper swiper-item image{
  display:block;
  width: 350rpx;
  height: 350rpx;
  border-radius: 50%;
  border:100rpx solid rgb(34, 34, 34);
  box-shadow: 3rpx 3rpx 10rpx black;
  margin: auto;
  animation:imgplay 20s linear infinite;
}
@keyframes imgplay{
  0%{
    transform: rotate(0deg);
  }
  100%{
    transform: rotate(360deg);
  }
}

scroll-view{
  height: 100%;
  /* background-color:skyblue; */
}
scroll-view view{
  color: rgb(158, 158, 158);
  text-align: center;
  font-size: 35rpx;
  line-height: 60rpx;
}
 .color{
 font-size:38rpx;
 color: rgb(255, 255, 255);
}
.playmode{
  height:60rpx;
  width:70rpx;
  /* background-color: silver; */
  position: relative;
  left:85%;
}
.playmode image{
  width: 60rpx;
